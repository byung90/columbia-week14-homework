<div class="container">
  <div class="container-fluid">
    <div class="overlay">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <h2>Recent Posts</h2>
        </div>
      </div>
    </div>
    {{#each posts as |post|}}
    <div class="row no-gutters post-container">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h3 class="">
          <a href="/post/{{post.id}}">{{post.post_title}}</a>
        </h3>
        <div data-id="{{post.id}}">
          <p>
            Author: {{ post.post_author.username }}
            <br />
            Date Posted: {{ format_date post.createdAt }}
          </p>
          <p class="post-text">
            {{ post.blog_content }}
          </p>
        </div>
      </div>
    </div>
    <div class="row no-gutters justify-content-center post-bar">
      {{#if ../logged_in}}
      <form class="col-lg-7 col-md-7 col-sm-7 col-xs-7 post-title new-comment">
        <div class="d-flex">
          <p>New Comment:</p>
        </div>
        <div class="d-flex justify-content-between">
          <textarea class="form-control comment-body" data-user="{{../userId}}"></textarea>
          <button type="submit" class="btn btn-outline-success post-btn">Submit</button>
        </div>
      </form>
      {{/if}}
    </div>
    {{/each}}
  </div>
</div>